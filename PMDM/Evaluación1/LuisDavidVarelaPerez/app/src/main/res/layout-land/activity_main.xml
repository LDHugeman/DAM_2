<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    android:orientation="vertical"
    android:padding="@dimen/marginYPadding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura"
        android:layout_weight="2"
        android:gravity="center"
        android:background="@color/colorCuadroSupInf">

        <Button
            android:id="@+id/boton_empezar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/empezar"
            android:layout_gravity="bottom"
            android:text="@string/botonEmpezar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura"
        android:layout_weight="1"
        android:background="@color/colorCuadroCentral"
        android:layout_marginTop="@dimen/marginYPadding"
        android:layout_marginBottom="@dimen/marginYPadding"
        android:gravity="center">

        <TextView
            android:id="@+id/textView_bienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bienvenido"
            android:textSize="@dimen/letra"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorCuadroSupInf"
        android:layout_height="@dimen/altura"
        android:layout_weight="2"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/boton_terminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/finalizar"
            android:onClick="onClickTerminar"
            android:text="@string/botonTerminar"/>
    </LinearLayout>

</LinearLayout>