<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:text="MODIFICAR UN USUARIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editText_codigoModificar"
        android:hint="CÃ³digo de usuario a modificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <EditText
        android:id="@+id/editText_nombreModificar"
        android:hint="Nuevo nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters"/>

    <Button
        android:id="@+id/boton_modificarUsuario"
        android:text="Modificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/boton_FinModificar"
        android:text="Fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>